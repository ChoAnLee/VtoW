{
    "manifest_version": 3,
    "name": "Multilingual IME",
    "version": "1.0",
    "description": "Multilingual IME",
    "permissions": ["activeTab", "input"],
    "host_permissions": [
        "https://*/*"
    ],
    "action": {
        "default_popup": "popup.html",

        "default_icon": {
            "48": "images/main.png"
        }
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "48": "images/main.png"
    }
}